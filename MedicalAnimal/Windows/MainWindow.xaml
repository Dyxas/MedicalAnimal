<Window x:Class="MedicalAnimal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedicalAnimal"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Content="Животные" Click="OnAnimalClick"></Button>
            <Button Content="Организации" Click="OnOrganizationClick"></Button>
            <Button Content="Контракты" Click="OnContractsClick"></Button>
            <Button Content="Запись об осмотре" Click="OnInspectionClick"></Button>
        </StackPanel>
        <Frame x:Name="CardsFrame" Content="Frame" NavigationUIVisibility="Hidden">
        </Frame>
    </StackPanel>
</Window>
